.p-tabBar {
	box-sizing: content-box;
	width: 100%;
	height: 49px;
	display: grid;
	grid-template-columns: repeat(4, 1fr);
	box-shadow: 0px -0.5px 0px 0px #f0f0f0;
	background-color: #fff;
	/*兼容 IOS<11.2*/
	padding-bottom: constant(safe-area-inset-bottom);
	padding-bottom: env(safe-area-inset-bottom);
}

.p-tabBar-icon {
	display: block;
	margin: 0 auto 2px;
	width: 22px;
	height: 22px;
}

.p-tabBar-text {
	line-height: 14px;
	font-size: 10px;
	text-align: center;
	color: #333333;
}

.p-tabBar-item {
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
}

.p-tabBar-item.active .p-tabBar-text {
	color: #04AA58;
}

.p-tabBar-badge-box {
	position: relative;
}

.p-tabBar-badge {
	top: 0;
	left: 14px;
	position: absolute;
	min-width: 14px;
	height: 14px;
	line-height: 14px;
	text-align: center;
	background: #ff5e36;
	border-radius: 11px;
	font-size: 10px;
	padding: 0 4px;
	color: white;
}